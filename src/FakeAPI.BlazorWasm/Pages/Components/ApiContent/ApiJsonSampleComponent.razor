    <HeaderTemplate>@Status(StatusCode)</HeaderTemplate>
    <ChildContent>
        @if (!string.IsNullOrWhiteSpace(SampleJson))
        {
            <RadzenCard Variant="Variant.Outlined">
                <pre style="margin: 0; padding: 10px; white-space: pre-wrap;">@SampleJson</pre>
            </RadzenCard>
        }
    </ChildContent>
</RadzenPanel>


