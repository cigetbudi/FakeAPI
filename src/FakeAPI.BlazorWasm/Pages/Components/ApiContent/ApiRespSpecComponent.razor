@if (ParamSpecsResponse?.Any() == true)
{
    <RadzenDataGrid Data="@ParamSpecsResponse" TItem="ApiResponseSpec" ShowPagingSummary="false" ShowPagination="false" Style="margin-top: 10px;">
        <Columns>
            <RadzenDataGridColumn TItem="ApiResponseSpec" Property="Name" Title="Name" />
            <RadzenDataGridColumn TItem="ApiResponseSpec" Property="DataType" Title="Data Type" />
            <RadzenDataGridColumn TItem="ApiResponseSpec" Property="Notes" Title="Notes" />
        </Columns>
    </RadzenDataGrid>
}

@code {
    [Parameter] public List<ApiResponseSpec>? ParamSpecsResponse { get; set; }
    [Parameter] public string SubHeading {get; set;} = string.Empty;
    [Parameter] public bool IsRoot {get; set;} = true;
}
