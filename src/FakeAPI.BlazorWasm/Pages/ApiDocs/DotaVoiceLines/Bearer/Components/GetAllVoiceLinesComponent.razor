@code {
    [Parameter] public string Description { get; set; } = "Get all 50 Dota Voice Lines";
    [Parameter] public string Endpoint { get; set; } = "GET /api/DotaVoiceLinesJWT/all";
    [Parameter] public string RequestCurl { get; set; } = @"
    curl -X 'GET' \
    'https://fakeapi.site/api/DotaVoiceLinesJWT/all' \
    -H 'accept: */*' \
    -H 'Authorization: Bearer *token from login*'";

    [Parameter] public string SampleJson200 { get; set; } = @"
    {
        ""responseCode"": ""200"",
        ""responseMessage"": ""Success"",
        ""data"": [
            {
                ""id"": 12,
                ""voiceLine"": ""Prepare for battle!"",
                ""heroName"": ""Sven"",
                ""length"": 19
            },
            {
                ""id"": 29,
                ""voiceLine"": ""As bad as things get, I can always come up with a way to make them a little worse."",
                ""heroName"": ""Ogre Magi"",
                ""length"": 82
            },
            {
                ""id"": 8,
                ""voiceLine"": ""So begins a new age of knowledge"",
                ""heroName"": ""Invoker"",
                ""length"": 32
            },
            ... Until 50 samples
        ]
    }";

    private List<ApiResponseSpec> RootResponseSpec = new()
    {
        new() { Name = "responseCode", DataType = "string", Notes = "Status code as string (e.g. 200)" },
        new() { Name = "responseMessage", DataType = "string", Notes = "Description of the result" },
        new() { Name = "data", DataType = "VoiceLine[]", Notes = "List of voice lines" }
    };

    private List<ApiResponseSpec> VoiceLineSpec = new()
    {
        new() { Name = "id", DataType = "int", Notes = "Unique voice line ID" },
        new() { Name = "voiceLine", DataType = "string", Notes = "Quote spoken by the hero" },
        new() { Name = "heroName", DataType = "string", Notes = "Hero name" },
        new() { Name = "length", DataType = "int", Notes = "Quote length in characters" }
    };


}
